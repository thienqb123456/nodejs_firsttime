<div class="mt-4">
    <h3>Sửa bài đăng</h3>
    <form method="POST" action="/moments/{{moment._doc._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tiêu đề </label>
            <input type="text" class="form-control" id="name" value="{{moment._doc.name}}"  name="name" >
        </div>

        <div class="form-group">
            <label for="videoId"> VideoId Youtube</label>
            <input type= "text" class="form-control" id="videoId" value="{{moment._doc.videoId}}" name="videoId">
        </div>

        <div class="form-group">
            <label for="author">Tác giả</label>
            <input type="text" class="form-control" id="author" value="{{moment._doc.author}}" name="author" >
        </div>
 
        <div class="form-group">
            <label for="description">Mô tả video</label>
            <input type="text" class="form-control" id="description" value="{{moment._doc.description}}" name="description" >
        </div>
        
                   <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>